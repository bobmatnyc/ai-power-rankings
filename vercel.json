{
  "buildCommand": "node scripts/clear-next-cache.js && npm run cache:generate && npm run build",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/no-auth/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/test-endpoint/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/admin/ingest-news/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/preview-rankings/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/generate-rankings/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/remove-data/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/admin/rollback-ingestion/route.ts": {
      "maxDuration": 180
    },
    "src/app/api/admin/refresh-tool-display/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/admin/fix-orphaned-data/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/admin/update-site-settings/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/data/cache/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400, stale-while-revalidate=43200"
        },
        {
          "key": "CDN-Cache-Control",
          "value": "max-age=86400"
        }
      ]
    },
    {
      "source": "/api/rankings",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=300, stale-while-revalidate=600, must-revalidate"
        },
        {
          "key": "Surrogate-Control",
          "value": "max-age=300"
        },
        {
          "key": "X-Cache-Tag",
          "value": "rankings-data"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=3600, stale-while-revalidate=1800"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
